{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "outDir": "lib",
    "rootDir": "./src",

    "baseUrl": "./src/templates/"
  },
  "include": ["src/templates/**/*", "src/typescript/**/*"]
}
